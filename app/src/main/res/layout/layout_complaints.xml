<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="//@19jeo235"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Cource is Missing"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewUsername"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateTime" />

        <TextView
            android:id="@+id/textViewBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Sir when i am trying to complete. my pre-registration I found the MIS portal isnot showing the Control System Engineering Course on my Portal infact it is available on the classmates portal."
            app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
            app:layout_constraintStart_toStartOf="@+id/textViewTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Registration"
            android:textColor="@color/white"
            app:chipBackgroundColor="@android:color/holo_green_light"
            app:layout_constraintStart_toStartOf="@+id/textViewBody"
            app:layout_constraintTop_toBottomOf="@+id/textViewBody" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSubcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="Pre-Registration"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/purple_200"
            app:layout_constraintStart_toEndOf="@+id/chipCategory"
            app:layout_constraintTop_toBottomOf="@+id/textViewBody" />

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="12:15 PM | 5-12-21"
            app:layout_constraintStart_toStartOf="@+id/textViewUsername"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN-PROGRESS"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white"
            app:chipBackgroundColor="@color/inprogress_color"
            app:chipStrokeColor="@android:color/darker_gray"
            app:chipStrokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewUsername"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewUsername" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textViewBody"
            app:layout_constraintStart_toStartOf="@+id/textViewBody"
            app:layout_constraintTop_toBottomOf="@+id/chipSubcategory">

            <ImageButton
                android:id="@+id/upvote"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:src="@drawable/ic_upvote_outlined" />

            <ImageButton
                android:id="@+id/downvote"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:src="@drawable/ic_downvote_outlined" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:padding="5dp"
                android:src="@drawable/ic_comments" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textViewBody"
            app:layout_constraintStart_toStartOf="@+id/textViewBody"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/upvoteNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:gravity="center"
                android:text="Upvote\n1k" />

            <TextView
                android:id="@+id/downvoteNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:gravity="center"
                android:text="Downvote\n1k" />

            <TextView
                android:id="@+id/commentNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#FDFBFB"
                android:gravity="center"
                android:text="Comments\n1k" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>